Source: Scripts\*; DestDir: {app}\Scripts
Source: Keyboards\*; DestDir: {app}\Keyboards
; NOTE: Don't use "Flags: ignoreversion" on any shared system files
Source: KeyMagic.exe; DestDir: {app}
Source: KeyMagic.ini; DestDir: {app}
Source: KeyMagicDll.dll; DestDir: {app}
Source: SetElevatedStartupTask.exe; DestDir: {app}; MinVersion: 0,6.0.6000
Source: C:\Windows\Fonts\Padauk.ttf; DestDir: {fonts}; Flags: onlyifdoesntexist uninsneveruninstall; FontInstall: Padauk; Tasks: installfonts
Source: C:\Windows\Fonts\Padauk-Bold.ttf; DestDir: {fonts}; Flags: onlyifdoesntexist uninsneveruninstall; FontInstall: Padauk Bold; Tasks: installfonts
Source: C:\Windows\Fonts\Parabaik20080421.ttf; DestDir: {fonts}; Flags: onlyifdoesntexist uninsneveruninstall; FontInstall: Parabaik; Tasks: installfonts
Source: C:\Windows\Fonts\mm3.ttf; DestDir: {fonts}; Flags: onlyifdoesntexist uninsneveruninstall; FontInstall: Myanmar3; Tasks: installfonts

[Icons]
Name: {group}\{#MyAppName}; Filename: {app}\{#MyAppExeName}
Name: {group}\{cm:UninstallProgram,{#MyAppName}}; Filename: {uninstallexe}
Name: {commondesktop}\{#MyAppName}; Filename: {app}\{#MyAppExeName}; Tasks: desktopicon

[Run]
Filename: {app}\{#MyAppExeName}; Description: {cm:LaunchProgram,{#MyAppName}}; Flags: nowait postinstall skipifsilent runascurrentuser; Tasks: ; Languages: 
