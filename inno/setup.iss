AppName={#MyAppName}
AppVerName={#MyAppVerName}
AppPublisher={#MyAppPublisher}
AppPublisherURL={#MyAppURL}
AppSupportURL={#MyAppURL}
AppUpdatesURL={#MyAppURL}
DefaultDirName={pf}\{#MyAppName}
DefaultGroupName={#MyAppName}
AllowNoIcons=yes
LicenseFile=doc\License.txt
InfoBeforeFile=doc\GPL.txt
OutputDir=output
OutputBaseFilename=setup
Compression=lzma
SolidCompression=yes

[Languages]
Name: english; MessagesFile: compiler:Default.isl

[Tasks]
Name: desktopicon; Description: {cm:CreateDesktopIcon}; GroupDescription: {cm:AdditionalIcons}; Flags: unchecked
Name: makeportable; Description: Use as portable; Flags: unchecked; GroupDescription: Misc
Name: installfonts; Description: Install Myanmar Unicode 5.1 Fonts; GroupDescription: Misc; Languages: 
Name: schedule; Description: Run with Windows; GroupDescription: Misc; MinVersion: 0,6.0.6000
Name: runreg; Description: Run with Windows; GroupDescription: Misc; OnlyBelowVersion: 0,6.0.6000; Languages: 

[Files]
